                            <span> <b>@Html.Label("name", "Item Name", htmlAttributes: new { @class = "control-label" })</b></span>
                            @Html.TextBoxFor(model => model.StkItem.ITEMNM, new { @class = "form-control input-sm", id = "txtItemNm" })
