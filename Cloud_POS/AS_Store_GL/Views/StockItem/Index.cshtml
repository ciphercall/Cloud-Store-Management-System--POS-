                <input id="lon" type="hidden" />

            </div>
        </div>

        @if (TempData["message"] != null)
        {
            <div class="text-center">
                <h4 style="color: #BD7F1C">@TempData["message"] </h4>
            </div>
        }


        <div class="row">
            <div class="row">
                @if (TempData["categoryId"] != null)
